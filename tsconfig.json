{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "module": "es6",
        "lib": [
            "ES2016",
            "DOM"
        ],
        "noImplicitUseStrict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
